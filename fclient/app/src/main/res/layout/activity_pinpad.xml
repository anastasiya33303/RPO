<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Pin"
        android:textAlignment="center"
        android:textSize="20dp"
        android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/txtPin"
        android:text=""
        android:textSize="28dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="140dp"
        android:columnCount="3"
        >

        <Button
            android:id="@+id/btnKey1"
            android:text="1"
            android:background="#FF5722"
            android:onClick="keyClick"
            style="@style/Button"
             />

        <Button
            android:id="@+id/btnKey2"
            style="@style/Button"
            android:background="#FF5722"
            android:onClick="keyClick"
            android:text="2" />

        <Button
            android:id="@+id/btnKey3"
            style="@style/Button"
            android:background="#FF5722"
            android:onClick="keyClick"
            android:text="3" />

        <Button
            android:id="@+id/btnKey4"
            style="@style/Button"
            android:background="#FF5722"
            android:onClick="keyClick"
            android:text="4" />

        <Button
            android:id="@+id/btnKey5"
            style="@style/Button"
            android:background="#FF5722"
            android:onClick="keyClick"
            android:text="5" />

        <Button
            android:id="@+id/btnKey6"
            style="@style/Button"
            android:background="#FF5722"
            android:onClick="keyClick"
            android:text="6" />

        <Button
            android:id="@+id/btnKey7"
            style="@style/Button"
            android:background="#FF5722"
            android:onClick="keyClick"
            android:text="7" />

        <Button
            android:id="@+id/btnKey8"
            style="@style/Button"
            android:background="#FF5722"
            android:onClick="keyClick"
            android:text="8" />

        <Button
            android:id="@+id/btnKey9"
            style="@style/Button"
            android:background="#FF5722"
            android:onClick="keyClick"
            android:text="9" />

        <Button
            android:id="@+id/btnKeyC"
            style="@style/Button"
            android:background="#FF5722"
            android:onClick="keyClick"
            android:text="C" />

        <Button
            android:id="@+id/btnKey0"
            style="@style/Button"
            android:background="#FF5722"
            android:onClick="keyClick"
            android:text="0" />

        <Button
            android:id="@+id/btnKeyOK"
            style="@style/Button"
            android:background="#FF5722"
            android:onClick="keyClick"
            android:text="OK" />
    </GridLayout>
</LinearLayout>